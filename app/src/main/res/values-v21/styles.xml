<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/primary_transparent</item>
    </style>

    <style name="AppTheme.AppDialog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="AppTheme.TextAppearance.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">?attr/colorError</item>
    </style>
</resources>