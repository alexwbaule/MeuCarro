<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/spin_car_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_weight="0"
                android:src="@drawable/ic_menu_calendar_2" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oil_add_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/data"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/ic_menu_time" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oil_add_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/hora"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_weight="0"
                android:src="@drawable/ic_menu_car_oil" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin">

                <AutoCompleteTextView
                    android:id="@+id/oil_add_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/listspace"
                    android:hint="@string/nome_marca_oleo"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_weight="0"
                android:src="@drawable/ic_menu_odometer" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin">

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/oil_add_km"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/listspace"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/odometro_atual"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:src="@drawable/ic_menu_odometer" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_nextkm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oil_add_nextkm"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/listspace"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/odometro_na_proxima_troca"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:src="@drawable/ic_menu_money" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oil_add_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_weight="0"
                android:src="@drawable/ic_menu_car_oil_2" />

            <com.google.android.material.textfield.TextInputLayout
                app:errorTextAppearance="@style/AppTheme.TextAppearance.Error"
                android:id="@+id/hint_oil_add_litros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/oil_add_litros"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/oil_add_filtro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/form_left_right_margin"
                android:layout_marginRight="@dimen/form_left_right_margin"
                android:layout_marginTop="@dimen/form_top_bottom_margin"
                android:text="@string/filtro" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>