<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/spin_size"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comb_frame">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_report_icon"
        android:src="@drawable/ic_menu_none"
        android:layout_marginLeft="@dimen/padding_margin_top"
        android:layout_marginRight="@dimen/padding_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/spin_report_name"
        android:gravity="center_vertical" />
</LinearLayout>