<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:layout_marginLeft="@dimen/dim_8dp"
        android:layout_marginRight="@dimen/dim_8dp">

        <TextView
            android:id="@+id/list_parts_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dash"
            android:textStyle="italic" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/list_parts_qtde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dash"
                android:textSize="12sp"
                android:textColor="@color/primary_dark"
                android:layout_weight=".2" />

            <TextView
                android:id="@+id/list_parts_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:gravity="end"
                android:text="@string/dash" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>